<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.Circle?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<BorderPane styleClass="home"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../CSS/Home.css"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Main8.HomeController">

   <padding>
      <Insets top="10" right="10" bottom="10" left="10"/>
   </padding>

   <!-- TOP -->
   <top>
      <BorderPane>
         <center>
            <Label text="User's Workspace"/>
         </center>

         <right>
            <StackPane onMouseClicked="#toggleNotification">
               <Label text="ðŸ””" style="-fx-font-size:18px;"/>
               <Circle fx:id="notifDot"
                       radius="5"
                       fill="red"
                       StackPane.alignment="TOP_RIGHT"
                       translateX="4"
                       translateY="-4"/>
            </StackPane>
         </right>
      </BorderPane>
   </top>

   <!-- LEFT MENU -->
   <left>
      <VBox styleClass="menubar" spacing="20" prefWidth="92">
         <children>

            <VBox alignment="CENTER" onMouseClicked="#showDashboard" styleClass="DBbutton">
               <children>
                  <ImageView fitWidth="20" fitHeight="20">
                     <image>
                        <Image url="@../Image/png-clipart-symbole-de-la-maison-logo-dessin-noir-noir-et-blanc-texte-ligne-zone.png"/>
                     </image>
                  </ImageView>
                  <Label text="Dashboard"/>
               </children>
            </VBox>

            <VBox alignment="CENTER" onMouseClicked="#showProjects" styleClass="PJbutton">
               <children>
                  <ImageView fitWidth="20" fitHeight="20">
                     <image>
                        <Image url="@../Image/folder-vector-icon-png_260858.jpg"/>
                     </image>
                  </ImageView>
                  <Label text="Projects"/>
               </children>
            </VBox>

            <VBox alignment="CENTER" onMouseClicked="#showTask" styleClass="Taskbutton">
               <children>
                  <ImageView fitWidth="20" fitHeight="20">
                     <image>
                        <Image url="@../Image/icons8-task-50.png"/>
                     </image>
                  </ImageView>
                  <Label text="Task"/>
               </children>
            </VBox>

            <VBox alignment="CENTER" onMouseClicked="#showSettings" styleClass="STbutton">
               <children>
                  <ImageView fitWidth="20" fitHeight="20">
                     <image>
                        <Image url="@../Image/pngtree-settings-icon-image_1198988 (1).jpg"/>
                     </image>
                  </ImageView>
                  <Label text="Settings"/>
               </children>
            </VBox>

         </children>
      </VBox>
   </left>

   <!-- CENTER -->
   <center>
      <StackPane fx:id="contentArea" styleClass="stack">
         <BorderPane.margin>
            <Insets left="10"/>
         </BorderPane.margin>

         <!-- PANEL THÃ”NG BÃO -->
         <VBox fx:id="notificationPane"
               visible="false"
               managed="false"
               prefWidth="260"
               maxWidth="260"
               spacing="8"
               style="-fx-background-color:white;
             -fx-padding:12;
             -fx-border-color:#ccc;
             -fx-border-radius:6;
             -fx-background-radius:6;
             -fx-effect:dropshadow(gaussian,rgba(0,0,0,0.2),10,0,0,2);"
               StackPane.alignment="TOP_RIGHT"
               translateX="-20"
               translateY="20"></VBox>

      </StackPane>
   </center>

</BorderPane>